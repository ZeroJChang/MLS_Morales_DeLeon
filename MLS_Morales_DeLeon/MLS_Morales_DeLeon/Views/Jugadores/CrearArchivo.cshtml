@model MLS_Morales_DeLeon.Models.RutaArchivo

@{
    ViewData["Title"] = "CrearArchivo";
}

<h1>Ingresar Archivo .CSV</h1>

<h4>RutaArchivo</h4>
<p>Para ingresar un archivo debe estar separado por comas por ejemplo</p>
<p>Jose Morales,Delantero,1500,Juventus</p>

<p>Ejemplo ruta: </p>
<p> C:\Users\ZeroJChang\Desktop\MOCK_Data.csv</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CrearArchivo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ruta" class="control-label"></label>
                <input asp-for="ruta" class="form-control" />
                <span asp-validation-for="ruta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MostrarListaJugadores">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
